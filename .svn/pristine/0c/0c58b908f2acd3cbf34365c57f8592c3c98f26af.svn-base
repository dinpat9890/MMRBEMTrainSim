#
# Domain : Application Manager  (pam)
#
applicationManager.logFile=../Logs/gcpdrivercontrolpanel.log

pam.showSplashScreen=true

# The class name that implements IApplication
pam.applicationClass=com.sydac.gcp.common.GCPPeerApplication

pam.connectToDatabase=true

# This key determines whether the application should be visible only during a session, or all the time
pam.applicationVisible.sessionOnly = true

# This key allows the application to ignore a shutdown message, which will
# normally cause the application to exit gracefully.
pam.ignoreShutdown = false

# The particular simulator/hub combination that this GMI application is being used in.
#
# Valid vaues are in the SIMULATOR table (SIM_SIMULATOR_NAME column)
gmi.simulatorName =Fixed Set Driver's Cab

# Valid values are in the PHYSICALHUB table (PHHU_HUB_NAME column)
gmi.hubName =Driver's Cab

# Graphical properties
gmi.drawhotspots = true

#Creator ID
gcp.creator.id = 41102

#Car Number
gcp.carnumber=0

#Screen Name
gcp.screenname=Driver Desk Control Panel

#Screen Size
pam.screen.xPosition=1080
pam.screen.yPosition=0
pam.screen.width=1920
pam.screen.height=1080