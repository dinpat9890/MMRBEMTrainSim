	-fx-background-repeat: no-repeat;
	-fx-background-image: url('../images/l2_sliding_door_left_right.png');
	-fx-background-size: 97.0%;
}

.line2-doorRight-background {
	-fx-background-color: none;
	-fx-background-position: center;
	-fx-background-repeat: no-repeat;
